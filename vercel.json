{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install",
  "outputDirectory": "apps/web/dist",
  "functions": {
    "api/**": {
      "maxDuration": 30
    }
  },
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/(.*)",
      "dest": "/api/[[...route]]"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
